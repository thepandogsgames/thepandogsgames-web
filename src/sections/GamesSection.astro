---
import CardGame from '@components/CardGame.astro'

import { getLangFromUrl, useTranslations } from '../i18n/utils'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section id="games" class="py-10 w-9/12 3xl:w-6/12 mx-auto">
  <h1 class="russo-font text-4xl mb-5 font-bold">{t('ourGames')}</h1>
  <div class="grid grid-cols-1 lg:grid-cols-2 3xl:grid-cols-3">
    <CardGame />
  </div>
</section>
