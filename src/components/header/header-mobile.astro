---
import { Image } from 'astro:assets'
import { getLangFromUrl, useTranslations } from '@i18n/utils'
import LanguagePicker from '@components/LanguagePicker.astro'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

interface Props {
  logo: Image
}

const { logo } = Astro.props
---

<nav
  x-show="isOpenMobileMenu"
  class="lg:hidden"
  role="dialog"
  aria-modal="true"
>
  <div class="fixed inset-0 z-10"></div>
  <div
    class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
  >
    <div class="flex items-center justify-between">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">ThePandogsGames</span>
        <Image src={logo} alt="Logo ThePandogsGames" class="w-16" />
      </a>
      <button
        x-on:click="isOpenMobileMenu = false"
        type="button"
        class="-m-2.5 rounded-md p-2.5 text-gray-700"
      >
        <span class="sr-only">{t('closeMenu')}</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/10">
        <div class="space-y-2 py-6">
          <a
            href="#games"
            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
            >{t('games')}</a
          >
          <a
            href="#whoAreWe"
            class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
            >{t('whoAreWe')}</a
          >
        </div>
        <div class="py-6" x-data="{isOpenChangeLanguage: false }">
          <div class="-mx-3">
            <button
              x-on:click="isOpenChangeLanguage = !isOpenChangeLanguage"
              type="button"
              class="flex w-full items-center justify-between rounded-lg py-2 pl-3 pr-3.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
              aria-controls="disclosure-1"
              aria-expanded="false"
            >
              {t('changeLanguage')}
              <svg
                class="h-5 w-5 flex-none"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>
            <div
              class="mt-2 space-y-2 pl-6"
              id="disclosure-1"
              x-show="isOpenChangeLanguage"
            >
              <LanguagePicker />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
