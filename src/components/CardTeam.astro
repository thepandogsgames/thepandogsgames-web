---
import { Image } from 'astro:assets'

import defaultLogo from '@assets/logos/Logo.svg'
import XIcon from '@icons/x.astro'
import LinkedinIcon from '@icons/linkedin.astro'
import GithubIcon from '@icons/github.astro'

interface Props {
  name: string
  job: string
  image?: Image
  twitterLink?: string
  linkedinLink?: string
  githubLink?: string
}

const {
  name,
  image = defaultLogo,
  job,
  twitterLink,
  linkedinLink,
  githubLink,
} = Astro.props
---

<section class="flex items-center gap-x-6">
  <Image
    src={image}
    alt={name}
    class="w-20 h-20 rounded-full grayscale border-2 no-drag"
  />
  <div>
    <p class="text-base font-semibold leading-7 tracking-tight text-gray-900">
      {name}
    </p>
    <p class="text-sm font-semibold leading-6 text-indigo-600">{job}</p>
    <div class="flex space-x-10 md:space-x-6 mt-2">
      {
        twitterLink && (
          <a
            class="hover:fill-indigo-600"
            href={twitterLink}
            target="_blank"
            rel="noreferrer"
          >
            <span class="sr-only">Twitter</span>
            <XIcon classList="fill-black hover:fill-indigo-600" height="1em" />
          </a>
        )
      }
      {
        linkedinLink && (
          <a
            class="hover:fill-indigo-600"
            href={linkedinLink}
            target="_blank"
            rel="noreferrer"
          >
            <span class="sr-only">Linkedin</span>
            <LinkedinIcon
              classList="fill-black hover:fill-indigo-600"
              height="1em"
            />
          </a>
        )
      }
      {
        githubLink && (
          <a
            class="hover:fill-indigo-600"
            href={githubLink}
            target="_blank"
            rel="noreferrer"
          >
            <span class="sr-only">Github</span>
            <GithubIcon classList="fill-black hover:fill-indigo-600" />
          </a>
        )
      }
    </div>
  </div>
</section>
