---
import { Image } from 'astro:assets';

import defaultLogo from '@assets/logos/Logo.svg';

interface Props {
	name: string;
    job: string;
    image?: Image;
    twitterLink?: string,
    linkedinLink?: string;
}

const { name, image = defaultLogo, job, twitterLink, linkedinLink } = Astro.props;
---

<section class="flex items-center gap-x-6">
    <Image src={image} alt={name} class="w-20 rounded-full grayscale border-2"/>
    <div>
      <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">{name}</h3>
      <p class="text-sm font-semibold leading-6 text-indigo-600">{ job }</p>
      <div class="flex space-x-10 md:space-x-6 mt-2">
        { twitterLink &&
          <a class="hover:fill-indigo-600" href={twitterLink} target="_blank" rel="noreferrer">
              <span class="sr-only">Twitter</span>
              <svg class="fill-black hover:fill-indigo-600" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/></svg>
          </a>
        }
        { linkedinLink &&
          <a class="hover:fill-indigo-600" href={linkedinLink} target="_blank" rel="noreferrer">
              <span class="sr-only">Linkedin</span>
              <svg class="fill-black hover:fill-indigo-600" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"/></svg>
          </a>
        }
      </div>
    </div>
  </section>